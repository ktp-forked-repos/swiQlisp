# -*- shell-script -*-

ask () { read -p "$1 [y/n]? " ans; }

usage () {
    echo "Usage: sudo swiqlisp-install [<lisp>]
Default lisp: SBCL"; }

need_root () {
    echo "Root privileges required."; }

ensure_trailing_slash () {
    if test ${1: -1} = /; then echo -n $1
    else echo -n $1/
    fi ; }

ensure_no_trailing_slash () {
    if test ${1: -1} = /; then echo -n ${1:0: -1}
    else echo -n $1
    fi ; }
